<% if @track && @track.errors.any?%>
  <ul>
    <% @track.errors.full_messages.each do |message| %>
      <li><%=message%></li> 
    <%end%>
  </ul>
<%end%>

<form method='post' action='/tracks'>

  <div>
    <label>Song Title: </label>
    <input type='text' name='song_title' value="<%= @track && @track.song_title%>"></input>
  </div>

  <div>
    <label>Author: </label>
    <input type='text' name='author' value="<%= @track && @track.author%>"></input>
  </div>

  <div>
    <label>URL: </label>
    <input type='text' name='url' value="<%= @track && @track.url %>"></input>
  </div>
  
  <div id='submit-button'>
    <input type='Submit'>
  </div>

</form>
<div>
  <a href='/../'><button>Go back</button></a>
</div>
<div class='gifs'>
